---
const { platform, username, icon } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}>
  <i class={`${icon}`}></i> {platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }

  i {
    font-size: 20px;
  }
</style>
